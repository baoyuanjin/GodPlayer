    <style name="textInputLayoutHint">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black40</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <!-- window 透明的-->
    <style name="Theme.AppCompat.Translucent" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/color_007AFF</item>
    </style>
    <!-- 默认圆角按钮样式 -->
    <style name="ButtonStyleLogin" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:foreground">@null</item>
    </style>

    <style name="ButtonStyleLogintext" parent="Widget.AppCompat.Button.Borderless">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:foreground">@null</item>
    </style>
    <!-- 默认圆角按钮样式 -->
    <style name="ButtonStyleRegister" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorButtonDisable</item>
        <item name="android:foreground">@null</item>
    </style>



    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <!-- 默认圆角按钮样式 -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white90</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:foreground">@null</item>
    </style>


    <style name="ButtonStyleCancle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white50</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/white</item>
        <item name="android:foreground">@null</item>
    </style>




    <!-- 仿 ios 开关按钮 -->
    <declare-styleable name="SwitchButton">
        <!-- 是否选中 -->
        <attr name="android:checked" />
        <!-- 是否禁用 -->
        <attr name="android:enabled" />
    </declare-styleable>
    <style name="AppSplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_transparent</item>
        <item name="colorPrimaryDark">@color/color_transparent</item>
        <item name="android:windowBackground">@mipmap/live_splash</item>
        <item name="colorAccent">@color/color_transparent</item>
    </style>

    <!-- 获取验证码样式 -->
    <style name="CountdownViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_countdown</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/common_code_send</item>
        <item name="android:textColor">@drawable/selector_countdown_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- 默认水平分割线样式 -->
    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_size</item>
        <item name="android:background">@color/colorLine</item>
    </style>
    <!-- 默认文本框样式 -->
<!--    <item name="android:background">@color/white</item>-->

    <style name="EditTextStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">@dimen/padding_15</item>
        <item name="android:textColorHint">@color/color_BDBDBE</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:paddingBottom">@dimen/padding_10</item>
        <item name="android:paddingLeft">@dimen/padding_10</item>
        <item name="android:paddingRight">@dimen/padding_10</item>
    </style>
    <!--font style end -->
    <style name="ww">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--分隔线 line style  start-->
    <style name="LineItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="LineItemStyleE4E4E4" parent="@style/LineItemStyle">
        <item name="android:background">#e4e4e4</item>
    </style>

    <style name="LineItemStyleE0E0E0">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>

    <!--横线-->
    <style name="LineItemStyleE0E0E0_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>
    <!--横线-->
    <style name="LineStyleE5E5E5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>
    <style name="Font15Style666666" parent="ww">
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textSize">@dimen/text_font_20</item>
    </style>

    <!--横线-->
    <style name="LineStyleD9D9D9">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_d9d9d9</item>
    </style>
    <!--横线-->
    <style name="LineStyleE4E4E4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_e4e4e4</item>
    </style>

    <!--竖线-->
    <style name="Style_vLine">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_e5e5e5</item>
    </style>

    <style name="Style_vLine_E0E0E0">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_e0e0e0</item>
    </style>

    <style name="TabMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/padding_3</item>
        <item name="android:gravity">center</item>
<!--        <item name="android:clickable">true</item>-->
        <item name="android:paddingTop">@dimen/padding_5</item>
        <item name="android:textColor">@drawable/selector_color_tab_main</item>
        <item name="android:textSize">@dimen/text_font_12</item>
    </style>

</resources>
