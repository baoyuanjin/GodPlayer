<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/padding_10"
    android:layout_marginTop="@dimen/padding_20"
    android:background="@drawable/shape_cme_input"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        app:hintTextAppearance="@style/textInputLayoutHint"
        android:paddingTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.company.shenzhou.utils.ClearEditText
            android:id="@+id/cet_cme_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_35"
            android:background="@color/transparent"
            android:hint="设备账号"
            android:lines="1"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black80"
            android:textColorHint="@color/black20"
            android:textSize="@dimen/padding_16" />

    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        app:hintTextAppearance="@style/textInputLayoutHint"
        android:paddingTop="@dimen/padding_10"
        android:layout_height="wrap_content">

    <com.company.shenzhou.utils.ClearEditText
        android:id="@+id/cet_cme_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_35"
        android:background="@color/transparent"
        android:hint="设备密码"
        android:lines="1"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="@dimen/padding_16" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />
    <com.google.android.material.textfield.TextInputLayout
        app:hintTextAppearance="@style/textInputLayoutHint"
        android:paddingTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.company.shenzhou.utils.ClearEditText
        android:id="@+id/cet_cme_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_35"
        android:background="@color/transparent"
        android:hint="标题"
        android:lines="1"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="@dimen/padding_16" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />
    <com.google.android.material.textfield.TextInputLayout
        app:hintTextAppearance="@style/textInputLayoutHint"
        android:paddingTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.company.shenzhou.utils.ClearEditText
        android:id="@+id/cet_cme_ip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_35"
        android:background="@color/transparent"
        android:hint="ip 或 url播放地址"
        android:lines="1"
        android:longClickable="true"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:singleLine="true"
        android:textColor="@color/black80"
        android:textSize="@dimen/padding_16" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />
    <com.google.android.material.textfield.TextInputLayout
        app:hintTextAppearance="@style/textInputLayoutHint"
        android:paddingTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.company.shenzhou.utils.ClearEditText
            android:id="@+id/cet_cme_note_message"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_35"
            android:background="@color/transparent"
            android:hint="备注信息"
            android:lines="1"
            android:paddingLeft="@dimen/padding_10"
            android:paddingRight="@dimen/padding_10"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black80"
            android:textSize="@dimen/padding_16" />
    </com.google.android.material.textfield.TextInputLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />
    <com.google.android.material.textfield.TextInputLayout
        app:hintTextAppearance="@style/textInputLayoutHint"
        android:paddingTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.company.shenzhou.utils.ClearEditText
        android:id="@+id/cet_cme_port"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_35"
        android:background="@color/transparent"
        android:hint="直播端口号"
        android:lines="1"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="@dimen/padding_16" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />
    <com.google.android.material.textfield.TextInputLayout
        app:hintTextAppearance="@style/textInputLayoutHint"
        android:paddingTop="@dimen/padding_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.company.shenzhou.utils.ClearEditText
        android:id="@+id/cet_cme_mic_port"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_35"
        android:background="@color/transparent"
        android:hint="语音端口号"
        android:lines="1"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black80"
        android:textSize="@dimen/padding_16" />
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine" />


