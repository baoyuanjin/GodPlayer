                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/padding_15"
                    app:bar_lineSize="@dimen/padding_0.5"
                    app:bar_rightIcon="@mipmap/icon_mine_right"
                    app:bar_rightText="" />

                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/bar_mine_power_explain"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_60"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftIcon="@mipmap/icon_mine_what"
                    app:bar_leftText="权限说明"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/padding_15"
                    app:bar_lineSize="@dimen/padding_0.5"
                    app:bar_rightIcon="@mipmap/icon_mine_right"
                    app:bar_rightText="" />

                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/bar_mine_use_pace"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_60"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftIcon="@mipmap/icon_memory"
                    app:bar_leftText="可用空间"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/padding_15"
                    app:bar_lineSize="@dimen/padding_0.5"
                    app:bar_rightIcon="@mipmap/icon_mine_right"
                    app:bar_rightText="" />

                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/bar_mine_how_use"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_60"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftIcon="@mipmap/icon_instructions"
                    app:bar_leftText="操作手册"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/padding_15"
                    app:bar_lineSize="@dimen/padding_0.5"
                    app:bar_rightIcon="@mipmap/icon_mine_right"
                    app:bar_rightText="" />


                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/sb_setting_agreement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    app:bar_leftText="隐私协议"
                    app:bar_rightIcon="@drawable/arrows_right_ic" />

                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/sb_setting_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:bar_leftText="关于我们"
                    app:bar_rightIcon="@drawable/arrows_right_ic" />

                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/bar_mine_change_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_60"
                    android:layout_marginTop="@dimen/padding_30"
                    android:background="@drawable/selector_item_ffffff"
