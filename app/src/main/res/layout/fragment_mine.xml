        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/bar_mine_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_50"
                    android:layout_marginTop="@dimen/padding_17"
                    android:background="@drawable/selector_item_ffffff"
                    app:bar_leftColor="@color/black333333"
                    app:bar_leftIcon="@mipmap/icon_mine_user"
                    app:bar_leftText="当前用户"
                    app:bar_lineColor="@color/color_DDDDDD"
                    app:bar_lineMargin="@dimen/padding_15"
                    app:bar_lineSize="@dimen/padding_0.5"
                    app:bar_rightColor="@color/color_999999"
                    app:bar_rightText="admin" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_30"
                    android:background="@color/color_f4f4f4" />


                <com.company.shenzhou.view.SettingBar
                    android:id="@+id/bar_mine_power_level"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_60"
                    android:background="@drawable/selector_item_ffffff"
